<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hero_item_list"
    app:cardCornerRadius="5dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="10dp"

    >

    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/superman"
        android:scaleType="centerCrop"
       />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/namebox"
            >
            <TextView android:id="@+id/tvHeroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superman"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="145dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/namebox"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tvHeroInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TitleSupermanSupermanSupermanSupermanSupermanSuperman "
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                />

        </RelativeLayout>







</androidx.cardview.widget.CardView>